<li id="asset_<%= asset.id %>">
	<% if asset.image? %>
		<%= link_to(image_tag(asset.public_filename(:thumb))) %>
	<% end %>
	<%= link_to asset.filename, download_asset_path(asset) %>
	(<%= link_to_remote("Delete", {:url => asset_path(asset), :method => :delete, :confirm => "are you sure?"}) %>)
</li>